<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentContainerColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/withoutSuggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Without suggestions"/>

        <Button
            android:id="@+id/recentSuggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent suggestions"/>

        <Button
            android:id="@+id/regularSuggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular suggestions"/>

    </LinearLayout>

    <TextView
        android:id="@+id/authorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="@color/secondaryTextColor"
        tools:text="User icons designed by Freepik"/>

</RelativeLayout>